{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Server with Debugger",
        "runtimeExecutable": "npx",
        "runtimeArgs": [
          "nodemon",
          "--config",
          "nodemon.json"
        ],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach Debugger to Server",
        "processId": "${command:PickProcess}",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  